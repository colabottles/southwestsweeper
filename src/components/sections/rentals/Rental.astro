---
import Container from "../../shared/Container.astro";
import GradientText from "../../shared/GradientText.astro";
import SubTitle2 from "../../shared/SubTitle2.astro";
import Title2 from "../../shared/Title2.astro";
import Rentals from "./components/Rentals.astro";
import { rentalsSection } from "./data.ts";

export interface Props {
  className?: string;
}
const { className } = Astro.props;
---

<section id="rentals" class=`${className}`>
  <Container
    className="mx-auto flex flex-col items-center justify-center text-center"
  >
    <Title2>{rentalsSection.title}</Title2>
    <SubTitle2>
      {rentalsSection.subheading1_1}
      <GradientText> {rentalsSection.subheading1_2}</GradientText>
    </SubTitle2>
  </Container>
  <Container>
    <div class="mt-8 grid sm:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {
        rentalsSection.rentals.map((rentals) => {
          return (
            <Rentals
              title={rentals.title}
              description={rentals.description}
              source={rentals.source}
              visual={rentals.visual}
            />
          );
        })
      }
    </div>
  </Container>
</section>
